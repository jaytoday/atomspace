#define EPSI 1.0e-8

// ====================================================================
// Basic FutureTruthValue
void DynamicUTest::test_predicate_formula()
{
	logger().debug("BEGIN TEST: %s", __FUNCTION__);

	ValuePtr result = _eval.eval_v("fututv");
	// printf("result: %s\n", result->to_string().c_str());
	printf("Got type=%s\n",
		nameserver().getTypeName(result->get_type()).c_str());
	TS_ASSERT_EQUALS(result->get_type(), FORMULA_STREAM);

	TS_ASSERT(result->is_type(FLOAT_VALUE));
	FloatValuePtr stv = FloatValueCast(result);
	// printf("stv: %s\n", stv->to_string().c_str());

	_eval.eval("(set-fake-tv! A (FloatValue 0.1 0.9))");
	_eval.eval("(set-fake-tv! B (FloatValue 0.1 0.9))");
	TS_ASSERT(fabs(stv->value()[0] - 0.99) <= EPSI);
	TS_ASSERT(fabs(stv->value()[1] - 0.81) <= EPSI);

	_eval.eval("(set-fake-tv! A (FloatValue 0.2 0.8))");
	_eval.eval("(set-fake-tv! B (FloatValue 0.1 0.9))");
	TS_ASSERT(fabs(stv->value()[0] - 0.98) <= EPSI);
	TS_ASSERT(fabs(stv->value()[1] - 0.72) <= EPSI);

	_eval.eval("(set-fake-tv! A (FloatValue 0.2 0.8))");
	_eval.eval("(set-fake-tv! B (FloatValue 0.3 0.7))");
	TS_ASSERT(fabs(stv->value()[0] - 0.94) <= EPSI);
	TS_ASSERT(fabs(stv->value()[1] - 0.56) <= EPSI);

	_eval.eval("(set-fake-tv! A (FloatValue 0.4 0.6))");
	_eval.eval("(set-fake-tv! B (FloatValue 0.1 0.9))");
	TS_ASSERT(fabs(stv->value()[0] - 0.96) <= EPSI);
	TS_ASSERT(fabs(stv->value()[1] - 0.54) <= EPSI);

	logger().debug("END TEST: %s", __FUNCTION__);
}

